generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type TechnicalSheetIngredients {
  finalPrice   Float
  finalWeight  Float
  ingredientId String @db.ObjectId
}

model Brands {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  /// Multiple data types found: String: 99.6%, Int: 0.4% out of 261 sampled entries
  name Json
}

model Ingredient {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  FC                Float
  IC                Float
  /// Multiple data types found: String: 0.6%, Int: 99.4% out of 621 sampled entries
  KJ                Json
  /// Multiple data types found: String: 0.6%, Int: 99.4% out of 621 sampled entries
  Kcal              Json
  calculateby       String
  name              String
  technicalSheetIds String[]
  type              String
}

model Survey {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  canMakeTechnicalSheet String
  consent               Boolean
  created_at            DateTime @db.Date
  email                 String
  knowsImportance       String
  knowsTechnicalSheet   String
  name                  String
  phoneNumber           String
  studentOrProfessional String
  worksInFoodIndustry   Boolean
}

model TechnicalSheet {
  id          String                      @id @default(auto()) @map("_id") @db.ObjectId
  created_at  DateTime                    @db.Date
  dishName    String
  email       String
  ingredients TechnicalSheetIngredients[]
  recipeSize  Float
  totalPrice  Float
}

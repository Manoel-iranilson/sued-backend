generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Ingredient {
  id           String            @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String
  FC           Float
  IC           Float
  // Kcal         BigInt
  // KJ           Int
  // calculateby  String

  technicalSheetIds String[] @db.ObjectId
  technicalSheets TechnicalSheet[]  @relation(fields: [technicalSheetIds], references: [id])
}

model TechnicalSheet {
  id           String            @id @default(auto()) @map("_id") @db.ObjectId
  created_at   DateTime @default(now())
  dishName     String
  ingredientsIds String[] @db.ObjectId
  ingredients Ingredient[]  @relation(fields: [ingredientsIds], references: [id])
  totalPrice   Float
  recipeSize   Float
}
